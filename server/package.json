{
  "name": "resume-agent-server",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "load:profile": "node scripts/load-profile.mjs",
    "load:profile:quick": "node scripts/load-profile.mjs --users=12 --read-requests=600 --read-concurrency=60 --sse-hold-users=12 --sse-hold-ms=5000 --sse-churn-requests=80 --sse-churn-concurrency=24 --pipeline-requests=24 --pipeline-concurrency=24",
    "load:profile:tiers": "node scripts/load-profile-tiers.mjs",
    "load:profile:tiers:quick": "node scripts/load-profile-tiers.mjs --tiers=small",
    "check:migrations": "node scripts/check-migration-drift.mjs --json=true",
    "check:ready": "node scripts/check-ready.mjs",
    "gate:staging": "npm run check:migrations && npm run check:ready",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "verify": "npm run typecheck && npm run lint && npm test && npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@hono/node-server": "^1.14.0",
    "@sentry/node": "^10.39.0",
    "@supabase/supabase-js": "^2.49.0",
    "hono": "^4.7.0",
    "ioredis": "^5.10.0",
    "pino": "^10.3.1",
    "stripe": "^20.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@types/node": "^22.0.0",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  }
}
